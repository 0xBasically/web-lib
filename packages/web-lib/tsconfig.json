{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDirs": ["."],
		"outDir": "./dist",
		"paths": {
			"@yearn-finance/web-lib/components/*": ["components/*"],
			"@yearn-finance/web-lib/components": ["components"],
			"@yearn-finance/web-lib/layouts/*": ["layouts/*"],
			"@yearn-finance/web-lib/layouts": ["layouts"],
			"@yearn-finance/web-lib/contexts/*": ["contexts/*"],
			"@yearn-finance/web-lib/contexts": ["contexts"],
			"@yearn-finance/web-lib/hooks/*": ["hooks/*"],
			"@yearn-finance/web-lib/hooks": ["hooks"],
			"@yearn-finance/web-lib/icons/*": ["icons/*"],
			"@yearn-finance/web-lib/icons": ["icons"],
			"@yearn-finance/web-lib/utils": ["utils"],
			"@yearn-finance/web-lib/utils/*": ["utils/*"],
		},
		"jsx": "react",
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"es6",
			"es7",
			"esnext",
			"dom"
		],
		"allowJs": true,
		"declaration": true,
		"removeComments": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
	},
	"exclude": ["node_modules"],
	"include": [
		".eslintrc.cjs",
		"components/**/*",
		"contexts/**/*",
		"hooks/**/*",
		"icons/**/*",
		"layouts/**/*",
		"utils/**/*",
	]
}
